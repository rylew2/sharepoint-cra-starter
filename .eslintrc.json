{
  "extends": ["eslint:recommended", "prettier", "prettier/react"], //eslint "recommended" is bare minimum standard (not as opinionated as "airbnb" or "standard")
  "plugins": [],
  "parserOptions": {
    "ecmaVersion": 2018, //can use latest js such as async/await, es6 constructs
    "sourceType": "module", //can use import/export
    "ecmaFeatures": {
      "jsx": true //allows to understand jsx
    }
  },
  "env": {
    "es6": true, //can use async/await
    "browser": true, //allows setTimeout, document, window w/o being flagged
    "node": true //allows us to use http or require w/o it being
  }
}
